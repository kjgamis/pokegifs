<div class="single">
  <%= image_tag(@pokemon_gif) %>

  <div class="text">
    <h2><%= @pokemon_name %></h2>
    <h5>
      <span class="key">Type: </span>
      <% @pokemon_type.each do |type| %>
        <%= type  %>
      <% end %>
    </h5>

    <h5><span class="key">Height: </span><%= @pokemon_height %></h5>
    <h5><span class="key">Weight: </span><%= @pokemon_weight %></h5>
    <h5><span class="key">Candy: </span><%= @pokemon_candy %></h5>    
    <h5><span class="key">Spawn Chance: </span><%= @pokemon_spawn_chance %></h5>
  </div>
</div>
